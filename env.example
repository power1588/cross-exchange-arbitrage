# Example environment variables for cross-exchange arbitrage

# Binance API credentials
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Bybit API credentials
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_SECRET_KEY=your_bybit_secret_key_here

# Logging configuration
RUST_LOG=info
LOG_LEVEL=info

# Application settings
ENVIRONMENT=development
DEBUG=true

# Database settings (if needed for future extensions)
# DATABASE_URL=postgresql://username:password@localhost/arbitrage_db

# Monitoring settings
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080

# Risk management settings
MAX_POSITION_SIZE=10.0
MAX_DAILY_LOSS=1000.0

# Network settings
CONNECTION_TIMEOUT=10
REQUEST_TIMEOUT=5

# Feature flags
ENABLE_LIVE_TRADING=false
ENABLE_METRICS=true
ENABLE_ALERTS=true
